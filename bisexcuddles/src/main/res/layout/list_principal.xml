<?xml version="1.0" encoding="utf-8"?><!-- ESTO ES EL DISEÃ‘O DEL LIST DE FOTOS  DE PERFILES  QUE UTILIZAMOS MEDIANTE UN RECYCLERVIEW -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@id/Layout_un_perfil_LinearLayout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardElevation="@dimen/elevation_perfiles"
        card_view:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/Cardview_list_persona_ImageView_usuario"
                android:layout_width="@dimen/tamanyo_foto_perfiles"
                android:layout_height="@dimen/tamanyo_foto_perfiles"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/Cardview_list_persona_ImageView_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:contentDescription="@string/Content_description_foto"
                app:layout_constraintEnd_toEndOf="@+id/Cardview_list_persona_ImageView_usuario"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- ******************************************************************************************-->
            <TextView
                android:id="@id/Cardview_list_persona_TextView_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:textColor="@color/gris"
                android:textIsSelectable="true"
                android:textSize="@dimen/tamanyo_letra_m"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/Cardview_list_persona_TextView_altura"
                app:layout_constraintStart_toEndOf="@id/Cardview_list_persona_ImageView_usuario"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- ******************************************************************************************-->
            <TextView
                android:id="@id/Cardview_list_persona_TextView_edad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="start"
                android:textColor="@color/gris"
                android:textIsSelectable="true"
                android:textSize="@dimen/tamanyo_letra_s_plus"

                app:layout_constraintBottom_toTopOf="@+id/Cardview_list_persona_TextView_peso"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@id/Cardview_list_persona_TextView_altura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/gris"
                android:textIsSelectable="true"
                android:textSize="@dimen/tamanyo_letra_s_plus"
                app:layout_constraintBottom_toTopOf="@+id/Cardview_list_persona_TextView_raza"
                app:layout_constraintStart_toEndOf="@+id/Cardview_list_persona_ImageView_usuario"
                app:layout_constraintTop_toBottomOf="@+id/Cardview_list_persona_TextView_nombre" />

            <TextView
                android:id="@id/Cardview_list_persona_TextView_peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textColor="@color/gris"
                android:textIsSelectable="true"
                android:textSize="@dimen/tamanyo_letra_s_plus"
                app:layout_constraintBottom_toTopOf="@+id/Cardview_list_persona_TextView_distancia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Cardview_list_persona_TextView_edad" />
            <!-- ******************************************************************************************-->
            <TextView
                android:id="@id/Cardview_list_persona_TextView_raza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/gris"

                android:textIsSelectable="true"
                android:textSize="@dimen/tamanyo_letra_s_plus"
                app:layout_constraintBottom_toTopOf="@+id/Cardview_list_persona_ImageView_sexualidad"
                app:layout_constraintStart_toEndOf="@+id/Cardview_list_persona_ImageView_usuario"
                app:layout_constraintTop_toBottomOf="@+id/Cardview_list_persona_TextView_altura" />

            <TextView
                android:id="@id/Cardview_list_persona_TextView_distancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textColor="@color/gris"
                android:textIsSelectable="true"
                android:textSize="@dimen/tamanyo_letra_s_plus"
                app:layout_constraintBottom_toTopOf="@+id/Cardview_list_persona_TextView_estrellas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Cardview_list_persona_TextView_peso" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/Cardview_list_persona_ImageView_sexualidad"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:contentDescription="@string/Content_description_boton"
                android:tint="@color/accent"
                app:layout_constraintBottom_toTopOf="@+id/Cardview_list_persona_view"
                app:layout_constraintStart_toStartOf="@+id/Cardview_list_persona_TextView_raza"
                app:layout_constraintTop_toBottomOf="@+id/Cardview_list_persona_TextView_raza" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/Cardview_list_persona_TextView_estrellas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="@color/gris"
                android:textSize="@dimen/tamanyo_letra_m"
                app:layout_constraintBottom_toTopOf="@+id/Cardview_list_persona_view"
                app:layout_constraintEnd_toStartOf="@id/Cardview_list_persona_ImageView_estrella"
                app:layout_constraintTop_toBottomOf="@+id/Cardview_list_persona_TextView_distancia" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/Cardview_list_persona_ImageView_estrella"
                android:layout_width="19dp"
                android:layout_height="19dp"

                android:contentDescription="@string/Content_description_boton"
                app:layout_constraintEnd_toEndOf="@+id/Cardview_list_persona_TextView_distancia"
                app:layout_constraintTop_toTopOf="@+id/Cardview_list_persona_TextView_estrellas" />
            <!-- ******************************************************************************************-->
            <!-- ******************************************************************************************-->
            <View
                android:id="@id/Cardview_list_persona_view"
                android:layout_width="1272dp"
                android:layout_height="1dp"
                android:background="@color/gris_semi_transparente"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Cardview_list_persona_ImageView_usuario" />

            <TextView
                android:id="@id/Cardview_list_persona_TextView_quiero_dejar_claro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:textColor="@color/gris"
                android:textIsSelectable="true"
                android:textSize="@dimen/tamanyo_letra_s_plus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Cardview_list_persona_ImageView_usuario" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>